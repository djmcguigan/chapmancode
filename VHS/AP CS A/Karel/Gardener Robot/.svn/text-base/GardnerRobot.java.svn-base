import kareltherobot.*;

public class GardnerRobot extends BetterTurnerRobot
{
    public GardnerRobot (int st, int ave, Direction dir, int beeps)
    {
        super(st, ave, dir, beeps);
    }
    
    public void plantGarden()
    {
        turnAround();
        move();
        move();
        move();
        turnRight();
        makeQuad();
        turnLeft();
        move();
        turnLeft();
        makeQuad();
        turnLeft();
        move();
        turnLeft();
        makeQuad();
        turnLeft();
        move();
        turnLeft();
        makeQuad();
        turnLeft();
    }
    
    private void makeQuad()
    {
        putBeeper();
        move();
        putBeeper();
        move();
        putBeeper();
        move();
        putBeeper();
        turnRight();
        move();
        putBeeper();
        move();
        putBeeper();
        move();
        putBeeper();
    }
}
        
    